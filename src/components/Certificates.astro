---
import Section from '../components/Section.astro'

export interface CertificatesProps {
    data: any;
}

const { data } = Astro.props;
const { certificates } = data;
---

<!-- Work Experience -->
<Section title="Certificados">
    <ul>
       {
        certificates.map(({name, date, issuer, url}: 
        {name: string, date: string, issuer: string, url: string}) => {
            const year = new Date(date).getFullYear()
            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>
                                    <a href={url} title={name} target="_blank">{name}</a>
                                </h3>
                                <h4>{issuer}</h4>
                            </div>
                            <time>{year}</time>
                        </header>
                    </article>
                </li>
            )
        })
       } 
    </ul>
</Section>

<style>
    li {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3 {
        font-weight: 500;
    }
    article h4 {
        font-weight: 400;
    }
    article a {
        color: inherit;
    }
    article a:hover {
        text-decoration: underline;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        color: oklch(37% 0.013 285.805);
        font-size: 0.85rem;
    }
</style>